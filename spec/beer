coordinates { // "any group that fulfills these subtraits is an instance of coordinates"
    latitude impl latitude {}   // the explicit syntax
    longitude {}                // shorthand for "coordinates.longitude impl longitude {}"
}

location {
    coordinates {}
    // region, language, etc.
}

ibu = number // shorthand for "ibu impl number {}"

beer {
    brewery {}
    ibu {} // etc.
}

beers = list(beer) // shorthand for "beers impl list { each = beer }"

brewery {
    location {}
    beers {}
}

// specific traits are capitalized. proper nouns. can exist in real world without further impl.
Reviresco impl beer {
    brewery = TresLitros
}

TresLitros impl brewery {
    location = Salida
    beers = [Reviresco]
}

Salida impl location {
    coordinates {
        latitude = 38.5342
        longitude = -105.9980
    }
}
